{
    "name": "Sepsis RL - RTX 5090 (Blackwell) Environment",
    "image": "nvcr.io/nvidia/tensorflow:25.02-tf2-py3", 
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter",
                "ms-python.vscode-pylint",
                "njpwerner.autodocstring"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/bin/python3"
            }
        }
    },
    "runArgs": [
        "--gpus", "all",
        "--ipc=host",
        "--ulimit", "memlock=-1",
        "--ulimit", "stack=67108864"
    ],
    "hostRequirements": {
        "gpu": "optional"
    },
    "postCreateCommand": "pip install pandas numpy scikit-learn matplotlib seaborn pyarrow"
}